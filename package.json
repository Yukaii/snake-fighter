{
  "name": "snake-fighter",
  "version": "1.0.0",
  "description": "Multiplayer Snake Game with WebSockets",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "vite build",
    "client": "vite",
    "preview": "vite preview",
    "build:prod": "vite build && NODE_ENV=production node server.js",
    "build:start": "pnpm run build && pnpm run start",
    "tui": "node tui-client.mjs",
    "test:localgame": "node test-localgame.mjs",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ink": "^4.4.1",
    "ink-box": "^1.0.0",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "phosphor-react": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@vitejs/plugin-react": "^4.0.3",
    "nodemon": "^3.0.1",
    "vite": "^4.4.5"
  },
  "keywords": [
    "snake",
    "multiplayer",
    "websocket",
    "game",
    "react"
